# Linux Production Environment (Unix Socket)
# Copy this to .env for Linux production

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# DATABASE_URL is used as fallback if socket fails
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/postgres

# Unix socket path for efficient Linux connections
DB_SOCKET_PATH=/var/run/postgresql

# API Server
API_HOST=127.0.0.1
API_PORT=4069

# Frontend proxy server
FRONTEND_HOST=127.0.0.1
FRONTEND_PORT=3001
API_UPSTREAM_BASE_URL=http://127.0.0.1:4069

# Workers / runtime
FETCH_INTERVAL_MS=3600000
NODE_ENV=production
